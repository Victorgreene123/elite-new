{
    "version": 2,
    "builds": [
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1" },
      { "src": "/(.*)", "dest": "/public/$1" }
    ],
    "rewrites": [
      {
        "source": "/old-path",
        "destination": "/new-path"
      }
    ],
    "redirects": [
      {
        "source": "/deprecated-path",
        "destination": "/updated-path",
        "permanent": true
      }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          { "key": "X-Content-Type-Options", "value": "nosniff" },
          { "key": "X-Frame-Options", "value": "DENY" }
        ]
      }
    ],
    "functions": {
      "api/index.js": {
        "memory": 512,
        "maxDuration": 10
      }
    }
  }
  